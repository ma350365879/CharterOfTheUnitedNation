<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff3b3c40"
              android:orientation="vertical"
              tools:context="un.org.charteroftheunitednation.DetailActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:id="@+id/chapterDetail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:scrollbarAlwaysDrawVerticalTrack="true"/>
	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/prevButton"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="#ff2e2e31"
			android:onClick="goToPreviousChapter"
			android:paddingBottom="12dp"
			android:paddingTop="12dp"
			android:src="@drawable/previous_chapter"/>


		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="#ff2e2e31"
			android:orientation="horizontal"
			android:paddingBottom="10dp"
			android:paddingTop="10dp">

			<LinearLayout
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#ff121213"/>

			<LinearLayout
				android:layout_width="0.5dp"
				android:layout_height="match_parent"
				android:background="#ff6c6c6c"/>
		</LinearLayout>


		<ImageView
			android:id="@+id/nextButton"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="#ff2e2e31"
			android:onClick="goToNextChapter"
			android:paddingBottom="12dp"
			android:paddingTop="12dp"
			android:src="@drawable/next_chapter"/>
	</LinearLayout>

</LinearLayout>